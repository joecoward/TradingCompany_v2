<Window x:Class="TradingCompany.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TradingCompany.WPF.ViewModels"
        xmlns:views="clr-namespace:TradingCompany.WPF.Views"
        Title="Auth App" Height="500" Width="500">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserHomeViewModel}">
            <views:UserHomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
            <views:RegisterView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <ContentControl Content="{Binding CurrentView}"/>
    </Grid>
</Window>