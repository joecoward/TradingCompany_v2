<UserControl x:Class="TradingCompany.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="{Binding WelcomeMessage}" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#333"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Ви успішно авторизувалися." 
                       FontSize="16" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <Button Content="Вийти з системи" 
                    Command="{Binding LogoutCommand}"
                    Width="150" Height="40" 
                    Background="#D9534F" Foreground="White" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>