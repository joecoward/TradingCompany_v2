<Window x:Class="TradingCompany.WPF.Views.Product.ProductCreaterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New product" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20" Background="White">
        <StackPanel>
            <TextBlock Text="Add Product" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Product Name"/>
            <TextBox Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     Height="30" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Price"/>
            <TextBox Text="{Binding Product.Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     Height="30" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Category"/>
            <ComboBox ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Name" 
                      SelectedValuePath="CategoryId"
                      SelectedValue="{Binding Product.CategoryId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                      Height="30" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Command="{Binding SaveCommand}" 
                        Background="#28A745" Foreground="White" Width="100" Height="35" Margin="0,0,10,0"/>

                <Button Content="Cancel" Command="{Binding CancelCommand}" 
                        Background="Gray" Foreground="White" Width="100" Height="35"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>