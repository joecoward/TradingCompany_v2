<UserControl x:Class="TradingCompany.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="400">
    <Border Background="White" CornerRadius="10" Padding="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Registration" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Login"/>
            <TextBox Text="{Binding Registration.Login, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Registration.Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,20" Padding="5"/>

            <Button Content="Registration"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}" 
                    Height="35" Background="#007ACC" Foreground="White"/>

            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Background="#007ACC" Foreground="White" 
                    HorizontalAlignment="Center"
                    Width="100"
                    Margin="0,20,0,5"/>
        </StackPanel>
    </Border>
</UserControl>